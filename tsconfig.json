{
  "compilerOptions": {
    "module": "commonjs",
    "declaration": true,
    "noImplicitAny": false,
    "removeComments": true,
    "noLib": false,
    "allowSyntheticDefaultImports": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "target": "es6",
    "sourceMap": true,
    "outDir": "./dist/src",
    "baseUrl": "./",
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "lib": ["es2019"],
    "paths": {
      "@/*": ["src/*"]
    },
    "incremental": true
  }
}
