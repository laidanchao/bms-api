{
  "name": "bms-api",
  "version": "0.0.1",
  "description": "BMS API V2",
  "private": true,
  "scripts": {
    "prebuild": "rimraf dist",
    "build": "nest build",
    "format": "prettier --write \"src/**/*.ts\" \"test/**/*.ts\"",
    "start": "ts-node -r tsconfig-paths/register src/app/web/web.app.ts",
    "start:staging": "cross-env NODE_ENV=staging ts-node -r tsconfig-paths/register src/app/web/web.app.ts",
    "prestart:prod": "rimraf dist && npm run build",
    "lint": "eslint src/ test/",
    "lint:fix": "eslint src/ --fix",
    "typeorm": "ts-node -r tsconfig-paths/register ./node_modules/typeorm/cli.js --config src/domain/base/repository/config/type-orm.config.ts",
    "migrate:create": "npm run typeorm migration:create -- -n",
    "migrate:generate": "npm run typeorm migration:generate -- -n",
    "migrate:revert": "npm run typeorm migration:revert",
    "migrate:run": "npm run typeorm migration:run",
    "migrate:seed": "ts-node -r tsconfig-paths/register ./node_modules/typeorm/cli.js --config src/test/seed/orm-seed.config.ts migration:run",
    "test": "jest --detectOpenHandles",
    "coverage": "jest --coverage --detectOpenHandles",
    "version": "auto-changelog -p && git add CHANGELOG.md",
    "plop": "plop"
  },
  "dependencies": {
    "@ftlab/nestjs": "^0.1.22",
    "@nestjs/common": "^7.0.0",
    "@nestjs/config": "^0.5.0",
    "@nestjs/core": "^7.0.0",
    "@nestjs/jwt": "^8.0.1",
    "@nestjs/microservices": "^7.6.15",
    "@nestjs/platform-express": "^7.0.0",
    "@nestjs/schedule": "^0.4.3",
    "@nestjs/swagger": "^4.5.3",
    "@nestjs/typeorm": "7.0.0",
    "@nestjsx/crud": "4.6.2",
    "@nestjsx/crud-typeorm": "4.6.2",
    "axios": "^0.21.1",
    "class-transformer": "^0.2.3",
    "class-validator": "^0.11.1",
    "compression": "latest",
    "fs": "0.0.1-security",
    "helmet": "4.6.0",
    "https-proxy-agent": "^7.0.5",
    "jsonwebtoken": "^8.5.1",
    "lodash": "^4.17.20",
    "moment": "^2.29.1",
    "nest-raven": "^7.0.0",
    "nestjs-cls": "^1.6.2",
    "node-cache": "^5.1.2",
    "passport-jwt": "^4.0.0",
    "rimraf": "^3.0.2",
    "rxjs": "^6.5.4",
    "ts-node-dev": "^1.1.6",
    "type-cacheable": "^4.1.2",
    "typeorm": "0.2.41",
    "typeorm-naming-strategies": "1.1.0",
    "typeorm-transactional-cls-hooked": "0.1.12",
    "winston": "^3.6.0"
  },
  "devDependencies": {
    "@ftlab/schematics": "0.0.2",
    "@nestjs/cli": "^7.0.0",
    "@nestjs/schematics": "^7.0.0",
    "@nestjs/testing": "^7.0.0",
    "@types/express": "^4.17.3",
    "@types/jest": "26.0.10",
    "@types/jsonwebtoken": "^8.5.0",
    "@types/node": "^13.9.1",
    "@types/passport": "^1.0.4",
    "@types/passport-jwt": "^3.0.6",
    "@types/request-promise": "^4.1.46",
    "@types/requestretry": "^1.12.7",
    "@types/supertest": "^2.0.8",
    "@typescript-eslint/eslint-plugin": "3.9.1",
    "@typescript-eslint/parser": "3.9.1",
    "auto-changelog": "^1.16.2",
    "eslint": "7.7.0",
    "eslint-config-prettier": "^6.10.0",
    "eslint-plugin-import": "^2.20.1",
    "eslint-plugin-sonarjs": "^0.10.0",
    "git-branch-is": "^4.0.0",
    "husky": "^4.2.5",
    "jest": "26.4.2",
    "jest-sonar-reporter": "^2.0.0",
    "lint-staged": "^10.2.11",
    "nodemon": "^2.0.2",
    "pg": "^8.5.1",
    "plop": "^2.7.4",
    "prettier": "^1.19.1",
    "ts-jest": "^26.5.2",
    "ts-loader": "^6.2.1",
    "ts-node": "9.0.0",
    "tsconfig-paths": "^3.9.0",
    "typescript": "~4.1.5"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.{jsx,tsx,ts,js,json,css,md}": [
      "prettier --write"
    ]
  },
  "auto-changelog": {
    "output": "CHANGELOG.md",
    "template": "keepachangelog",
    "unreleased": true,
    "commitLimit": false
  },
  "engines": {
    "node": ">=18"
  }
}
