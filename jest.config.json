{
  "moduleFileExtensions": ["js", "json", "ts"],
  "rootDir": "src",
  "testRegex": ".(e2e-spec|test).ts$",
  "testEnvironment": "node",
  "testTimeout": 600000,
  "transform": {
    "^.+\\.(t|j)s$": "ts-jest"
  },
  "globals": {
    "NODE_ENV": "test"
  },
  "testResultsProcessor": "jest-sonar-reporter",
  "coverageDirectory": "../coverage",
  "coveragePathIgnorePatterns": ["seed", "/config", "/dto", "/entities", ".module.ts$"],
  "moduleNameMapper": {
    "@/(.*)": "<rootDir>/$1"
  }
}
